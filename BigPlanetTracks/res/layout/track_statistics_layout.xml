<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/ScrollView01"  
  android:layout_width="fill_parent"  
  android:layout_height="fill_parent"> 
<LinearLayout
  android:id="@+id/get_info_layout_root"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"
  android:background="#8DB6CD">
  
    <TextView
	      android:id="@+id/track_name_view" 
	      android:text="@string/track_name_string" 
	      android:layout_width="wrap_content" 
	      android:layout_height="wrap_content"
	      android:textColor="#FFFFFF"/>
	<TextView
          android:layout_marginTop="5dip" 
	      android:id="@+id/track_name_content_view" 
	      android:layout_width="fill_parent" 
	      android:layout_height="wrap_content"
	      android:background="#FFFFFF"
	      android:textColor="#000000"
	      android:cursorVisible="false"
	      android:focusable="false"/>
    
    <LinearLayout
  		android:id="@+id/get_info_layout_root1"
  		android:layout_width="wrap_content"
  		android:layout_height="fill_parent"
  		android:orientation="horizontal">
    	<LinearLayout
  			android:id="@+id/get_info_layout_root2"
  			android:layout_width="wrap_content"
  			android:layout_height="fill_parent"
  			android:orientation="vertical">
    		<TextView android:text="@string/track_time_string"
              	android:id="@+id/track_time_view" 
              	android:layout_width="wrap_content" 
              	android:layout_height="wrap_content"
              	android:textColor="#FFFFFF"/>
			<TextView
              	android:layout_marginTop="5dip" 
              	android:id="@+id/track_time_content_view" 
              	android:layout_width="145dip" 
              	android:layout_height="wrap_content"
              	android:background="#FFFFFF"
              	android:textColor="#000000"
              	android:cursorVisible="false"
              	android:focusable="false"/>
    	</LinearLayout>
    	
    	<LinearLayout
  			android:id="@+id/get_info_layout_root3"
  			android:layout_width="wrap_content"
  			android:layout_height="fill_parent"
  			android:orientation="vertical"
  			android:layout_marginLeft="5dip">
    		<TextView android:text="@string/track_distance_string"
		      	android:id="@+id/track_distance_view" 
		      	android:layout_width="wrap_content" 
		      	android:layout_height="wrap_content"
		      	android:textColor="#FFFFFF"/>
			<TextView
	          	android:layout_marginTop="5dip"
		      	android:id="@+id/track_distance_content_view" 
		      	android:layout_width="145dip" 
		      	android:layout_height="wrap_content"
		      	android:background="#FFFFFF"
		      	android:textColor="#000000"
		      	android:cursorVisible="false"
		      	android:focusable="false"/>
    	</LinearLayout>
    </LinearLayout>
    
    <LinearLayout
   		android:id="@+id/get_info_layout_root1"
  		android:layout_width="wrap_content"
  		android:layout_height="fill_parent"
  		android:orientation="horizontal">
    	<LinearLayout
  			android:id="@+id/get_info_layout_root2"
  			android:layout_width="wrap_content"
  			android:layout_height="fill_parent"
  			android:orientation="vertical">
    		<TextView android:text="@string/track_speed_string"
              	android:id="@+id/track_speed_view" 
              	android:layout_width="wrap_content" 
              	android:layout_height="wrap_content"
              	android:textColor="#FFFFFF"/>
			<TextView
              	android:layout_marginTop="5dip" 
              	android:id="@+id/track_speed_content_view" 
              	android:layout_width="145dip" 
              	android:layout_height="wrap_content"
              	android:background="#FFFFFF"
              	android:textColor="#000000"
              	android:cursorVisible="false"
              	android:focusable="false"/>
    	</LinearLayout>
    	<LinearLayout
  			android:id="@+id/get_info_layout_root2"
  			android:layout_width="wrap_content"
  			android:layout_height="fill_parent"
  			android:layout_marginLeft="5dip"
  			android:orientation="vertical">
    		<TextView android:text="@string/track_maxSpeed_string"
              	android:id="@+id/track_maxSpeed__view" 
              	android:layout_width="wrap_content" 
              	android:layout_height="wrap_content"
              	android:textColor="#FFFFFF"/>
			<TextView
              	android:layout_marginTop="5dip" 
              	android:id="@+id/track_maxSpeed_content_view" 
              	android:layout_width="145dip" 
              	android:layout_height="wrap_content"
              	android:background="#FFFFFF"
              	android:textColor="#000000"
              	android:cursorVisible="false"
              	android:focusable="false"/>
    	</LinearLayout>
    </LinearLayout>
    
    <TextView android:text="@string/track_waypoints_string"
	      android:id="@+id/track_waypoints_view" 
	      android:layout_width="wrap_content" 
	      android:layout_height="wrap_content"
	      android:textColor="#FFFFFF"/>
	<TextView
          android:layout_marginTop="5dip" 
	      android:id="@+id/track_waypoints_content_view" 
	      android:layout_width="fill_parent" 
	      android:layout_height="wrap_content"
	      android:background="#FFFFFF"
	      android:textColor="#000000"
	      android:cursorVisible="false"
	      android:focusable="false"/>
    
    <TextView android:text="@string/track_start_time_string"
	      android:id="@+id/track_start_time_view" 
	      android:layout_width="wrap_content" 
	      android:layout_height="wrap_content"
	      android:textColor="#FFFFFF"/>
	<TextView
	      android:layout_marginTop="5dip" 
	      android:id="@+id/track_start_time_content_view" 
	      android:layout_width="fill_parent" 
	      android:layout_height="wrap_content"
	      android:background="#FFFFFF"
	      android:textColor="#000000"
	      android:cursorVisible="false"
	      android:focusable="false"
	      android:singleLine="false"/>
  
    <TextView android:text="@string/track_description_string"
	      android:id="@+id/track_description_view" 
	      android:layout_width="wrap_content" 
	      android:layout_height="wrap_content"
	      android:textColor="#FFFFFF"/>
	<TextView
          android:layout_marginTop="5dip" 
	      android:id="@+id/track_description_content_view" 
	      android:layout_width="fill_parent" 
	      android:layout_height="wrap_content"
	      android:background="#FFFFFF"
	      android:textColor="#000000"
	      android:cursorVisible="false"
	      android:focusable="false"
	      android:singleLine="false"/>
  
</LinearLayout>
</ScrollView>